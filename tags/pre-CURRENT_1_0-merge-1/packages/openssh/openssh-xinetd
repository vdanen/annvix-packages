# default: off
# description: sshd server, xinetd version. \
# Don't run the standalone version if you run \
# this.
service ssh
{
	disable	= yes
	socket_type		= stream
	wait			= no
	user			= root
	server			= /usr/sbin/sshd
	server_args		= -i
	log_on_success		+= DURATION USERID
	log_on_failure		+= USERID
	nice			= 10
}
