### --> Critical System Boot Files <-- ###
# Files required to boot the system properly

( rulename = "Critical system boot files", severity = $(SIG_HI) )
{
  /boot					-> $(SEC_CRIT) ;
  /sbin/devfsd				-> $(SEC_CRIT) ;
  /usr/sbin/grub			-> $(SEC_CRIT) ;
  /usr/sbin/grub-install		-> $(SEC_CRIT) ;
